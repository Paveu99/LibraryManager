{
    "compilerOptions": {
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "CommonJS",
        "outDir": "dist",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "composite": true
    }
}